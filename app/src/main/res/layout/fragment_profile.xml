<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".Profile">



<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/screenbg"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Profile">

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="@dimen/_80sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/coverpic"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"
                    android:background="@color/ThemeColor3"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="0dp" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/piccard"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    app:cardCornerRadius="@dimen/_50sdp"
                    app:layout_constraintTop_toTopOf="@id/coverpic"
                    app:layout_constraintBottom_toBottomOf="@id/coverpic"
                    app:layout_constraintRight_toRightOf="@id/coverpic"
                    app:layout_constraintLeft_toLeftOf="@id/coverpic">

                    <ImageView
                        android:id="@+id/profilepic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profile_avatar"/>



                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/editimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pencil"
                    app:layout_constraintRight_toRightOf="@id/piccard"
                    app:layout_constraintBottom_toBottomOf="@id/piccard"
                    android:elevation="@dimen/_26sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:background="@drawable/rounded_corner"
                    android:padding="6dp"
                    android:backgroundTint="#43a047"/>
            </androidx.constraintlayout.widget.ConstraintLayout>







        <TextView
            android:id="@+id/namelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:elevation="16dp"
            android:text="Name"
            android:textSize="@dimen/font_size_micro" />

        <TextView
            android:id="@+id/nametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@null"
            android:elevation="16dp"
            android:inputType="textPersonName"
            android:outlineProvider="none"
            android:text=""
            android:textColor="@color/primary_text"
            android:textSize="@dimen/font_size_large"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/_8sdp"
            android:background="@color/lightgrey"/>

        <TextView
            android:id="@+id/emaillabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:elevation="16dp"
            android:text="Email"
            android:textSize="@dimen/font_size_micro" />

        <TextView
            android:id="@+id/emailtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:background="@null"
            android:elevation="16dp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="@dimen/_2sdp"
            android:outlineProvider="none"
            android:text=""
            android:textColor="@color/primary_text"
            android:textSize="@dimen/font_size_large"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/_8sdp"
            android:background="@color/lightgrey"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:elevation="16dp"
            android:text="Mobile"
            android:textSize="@dimen/font_size_micro" />

        <TextView
            android:id="@+id/mobiletxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:background="@null"
            android:elevation="16dp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="@dimen/_2sdp"
            android:outlineProvider="none"
            android:text=""
            android:maxLength="10"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/font_size_large"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/_8sdp"
            android:background="@color/lightgrey"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:elevation="16dp"
            android:text="About Me"
            android:textSize="@dimen/font_size_micro" />

        <TextView
            android:id="@+id/abouttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:text=""
            android:textColor="@color/primary_text"
            android:textSize="@dimen/font_size_large"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/_8sdp"
            android:background="@color/lightgrey"/>
    </LinearLayout>
</ScrollView>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="@dimen/_85sdp"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>